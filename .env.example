# ==============================================
# Vercel & Next.js Configuration
# ==============================================
# The URL of your deployed application (e.g., https://your-project.vercel.app)
NEXT_PUBLIC_APP_URL=http://localhost:3003

# API URL for frontend to reach backend (relative for same-domain proxy)
NEXT_PUBLIC_API_URL=/api/backend/api/whatsapp
# Backend URL (used by legacy components) - same as API URL base
NEXT_PUBLIC_BACKEND_URL=/api/backend

# ==============================================
# Authentication (Better Auth / NextAuth)
# ==============================================
# Secret key for encryption (generate a random string)
BETTER_AUTH_SECRET=your_random_secret_here
# URL of the auth server (same as APP_URL in Vercel)
BETTER_AUTH_URL=http://localhost:3003
# Encryption Key used by DB logic
ENCRYPTION_KEY=your_encryption_key_here

# Optional: OAuth Providers
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ==============================================
# Database (PostgreSQL)
# ==============================================
# Connection string to your Postgres database (Neon, Supabase, etc.)
DATABASE_URL=postgres://user:password@host:5432/database

# ==============================================
# Backend Services (Express)
# ==============================================
# Port for running backend locally (optional in Vercel)
PORT=3000
# Internal secret for securing webhook forwarding (if applicable)
INTERNAL_SECRET=your_internal_secret

# ==============================================
# WhatsApp Integration (AOC / Meta)
# ==============================================
# Verify Token for Meta Webhooks
WEBHOOK_VERIFY_TOKEN=your_verify_token
# WhatsApp Phone Number (optional default)
WHATSAPP_PHONE_NUMBER=+1234567890

# ==============================================
# Integrations (Optional)
# ==============================================
LINEAR_API_KEY=
LINEAR_TEAM_ID=
RESEND_API_KEY=
RESEND_FROM_EMAIL=
SLACK_API_KEY=
OPENAI_API_KEY=
AI_GATEWAY_API_KEY=
FIRECRAWL_API_KEY=
V0_API_KEY=
