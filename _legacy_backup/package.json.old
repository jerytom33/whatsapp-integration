{
    "name": "whatsapp-fullstack",
    "version": "1.0.0",
    "description": "Monorepo for WhatsApp Integration (Backend) and Frontend",
    "scripts": {
        "start": "concurrently \"npm run start:backend\" \"npm run start:frontend\" \"npm run start:workflow\"",
        "start:backend": "cd backend && node src/server.js",
        "start:frontend": "cd frontend && npm run dev",
        "start:workflow": "cd workflow-builder && npm run dev",
        "install:all": "concurrently \"cd backend && npm install\" \"cd frontend && npm install\" \"cd workflow-builder && npm install\""
    },
    "devDependencies": {
        "concurrently": "^8.2.2",
        "ngrok": "^5.0.0-beta.2"
    }
}